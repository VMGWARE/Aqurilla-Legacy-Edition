<%- include('./layouts/main') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Create a Post</h2>
      <form action="/create-post" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter the title of your post" required>
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea class="form-control" id="content" name="content" rows="5" placeholder="Enter the content of your post" required></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
  </div>
</div>

